{
  "name": "howtomecm-portal",
  "version": "1.0.0",
  "description": "How to MeCM knowledge portal - Microsoft endpoint management guides and tutorials",
  "keywords": ["nextjs", "blog", "microsoft", "intune", "mecm", "endpoint-management", "typescript", "tailwindcss", "portal"],
  "author": "How to MeCM Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:blog": "playwright test e2e/blog-enhanced.spec.ts",
    "test:e2e:comments": "playwright test e2e/comment-system.spec.ts",
    "test:e2e:a11y": "playwright test e2e/blog-accessibility.spec.ts",
    "test:all": "npm run test && npm run test:e2e",
    "postinstall": "playwright install --with-deps"
  },
  "dependencies": {
    "next": "^15.5.3",
    "pg": "^8.13.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.5",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^15.0.7",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^24.5.2",
    "@types/pg": "^8.11.10",
    "@types/react": "^19.1.13",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "@types/react": "^19.1.13"
  }
}
