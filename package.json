    "dompurify": "^3.2.7",
    "gray-matter": "^4.0.3",
    "next": "^15.5.3",
    "next-mdx-remote": "^5.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "reading-time": "^1.5.0",
    "swr": "^2.3.6",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.4",
    "@eslint/eslintrc": "^3.3.1",
